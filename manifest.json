{
  "name": "Magic Chrome Extension",
  "description": "Build a browser extension with Magic auth!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon-purple.png",
      "32": "/images/icon-purple.png",
      "48": "/images/icon-purple.png",
      "128": "/images/icon-purple.png"
    }
  },
  "icons": {
    "16": "/images/icon-purple.png",
    "32": "/images/icon-purple.png",
    "48": "/images/icon-purple.png",
    "128": "/images/icon-purple.png"
  }
}
